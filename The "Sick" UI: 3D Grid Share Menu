const ShareModal = ({ videoUrl, title }) => {
  const platforms = ['whatsapp', 'telegram', 'facebook', 'x', 'linkedin', 'reddit', 'email'];

  return (
    <div className="grid grid-cols-4 gap-4 p-6 bg-gray-900 rounded-3xl border border-white/10 animate-in fade-in zoom-in duration-200">
      {platforms.map(p => (
        <button 
          key={p}
          onClick={() => window.open(ShareService.getShareUrl(p, videoUrl, title), '_blank')}
          className="flex flex-col items-center gap-2 group"
        >
          <div className="p-3 bg-gray-800 rounded-full group-hover:bg-purple-600 group-hover:scale-110 transition-all duration-200 shadow-lg">
             <Icon name={p} className="w-6 h-6 text-white" />
          </div>
          <span className="text-[10px] uppercase font-bold text-gray-500">{p}</span>
        </button>
      ))}
      
      {/* "Copy Link" Special Feature */}
      <button 
        onClick={() => navigator.clipboard.writeText(videoUrl)}
        className="col-span-4 mt-2 bg-white/5 hover:bg-white/10 py-3 rounded-xl font-bold flex justify-center gap-2"
      >
        <LinkIcon className="w-5 h-5" /> Copy Link
      </button>
    </div>
  );
};
