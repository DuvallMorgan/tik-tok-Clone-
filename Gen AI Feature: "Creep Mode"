const CreepModeToggle = ({ isActive, onToggle }) => (
  <button 
    onClick={onToggle}
    className={`p-4 rounded-full transition-all duration-300 ${
      isActive ? 'bg-purple-600 shadow-[0_0_20px_purple] animate-pulse' : 'bg-gray-800'
    }`}
  >
    <GhostIcon className={isActive ? 'text-white' : 'text-gray-400'} />
    {isActive && <span className="absolute -top-2 text-[10px] bg-red-500 px-1 rounded">CREEP ACTIVE</span>}
  </button>
);
